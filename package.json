{
  "name": "iigb-website",
  "version": "1.1.0",
  "engines": {
    "node": "5.6.0"
  },
  "private": true,
  "dependencies": {
    "express": "^4.14.0"
  },
  "config": {
    "debug": "website-builder,metalsmith-page-builder,'$DEBUG'",
    "content_base": "node_modules"
  },
  "scripts": {
    "start": "npm run build && node lib/server.js",
    "dev": "./lib/init-dev.sh && nodemon --watch src -e json,js,sh,html,yaml,md,css,scss lib/server.js",
    "clean": "website-builder clean",
    "build": "npm run clean && npm run build-pages && npm run assets && npm run media",
    "build-dev": "npm config set iigb-website:content_base . && npm run build",
    "build-pages": "DEBUG=$npm_package_config_debug website-builder build --layouts src/templates --content $npm_package_config_content_base/iigb-beta-content/content --structure $npm_package_config_content_base/iigb-beta-structure/structure",
    "assets": "DEBUG=$npm_package_config_debug website-builder -t build/assets assets --assets src/assets --sass ./scss -o ./css",
    "media": "website-builder -t build/media assets --assets $npm_package_config_content_base/iigb-beta-content/media",
    "deploy": "npm test && npm run build && node_modules/iigb-aws-helpers/deploy.sh && node_modules/iigb-aws-helpers/invalidate-cache.sh && node node_modules/iigb-aws-helpers/refreshSingleSearch.js build/",
    "test": "website-builder test"
  },
  "devDependencies": {
    "iigb-aws-helpers": "uktrade/iigb-aws-helpers#latest",
    "iigb-beta-content": "uktrade/iigb-beta-content",
    "iigb-beta-structure": "uktrade/iigb-beta-structure",
    "iigb-cms-tags": "uktrade/iigb-cms-tags",
    "nodemon": "^1.11.0",
    "nunjucks": "^3.0.0",
    "underscore": "^1.8.3",
    "website-builder": "uktrade/website-builder"
  }
}
